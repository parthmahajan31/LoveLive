<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.love.lovelive.ui.fragments.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"
            android:id="@+id/action_homeFragment_to_leaderBoardFragment"
            app:destination="@id/leaderBoardFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.love.lovelive.ui.fragments.search.SearchFragment"
        android:label="SearchFragment" />
    <fragment
        android:id="@+id/momentsFragment"
        android:name="com.love.lovelive.ui.fragments.moments.MomentsFragment"
        android:label="MomentsFragment" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.love.lovelive.ui.fragments.profile.ProfileFragment"
        android:label="ProfileFragment" >

    </fragment>
    <fragment
        android:id="@+id/otherUserProfileFragment"
        android:name="com.love.lovelive.ui.fragments.otherUser.OtherUserProfileFragment"
        android:label="OtherUserProfileFragment" />
    <fragment
        android:id="@+id/leaderBoardFragment"
        android:name="com.love.lovelive.ui.fragments.home.leader.LeaderBoardFragment"
        android:label="LeaderBoardFragment" >
        <action
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"
            android:id="@+id/action_leaderBoardFragment_to_otherUserProfileFragment"
            app:destination="@id/otherUserProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/goLiveFragment"
        android:name="com.love.lovelive.ui.fragments.goLive.GoLiveFragment"
        android:label="GoLiveFragment" />
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.love.lovelive.ui.fragments.signup.SignupFragment"
        android:label="SignupFragment" >
        <action
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"
            android:id="@+id/action_signupFragment_to_verifyCodeFragment"
            app:destination="@id/verifyCodeFragment" />
    </fragment>
    <fragment
        android:id="@+id/verifyCodeFragment"
        android:name="com.love.lovelive.ui.fragments.signup.verify.VerifyCodeFragment"
        android:label="VerifyCodeFragment" >
        <action
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"
            android:id="@+id/action_verifyCodeFragment_to_liveFragment"
            app:destination="@id/liveFragment" />
    </fragment>
    <fragment
        android:id="@+id/liveFragment"
        android:name="com.love.lovelive.ui.fragments.live.LiveFragment"
        android:label="LiveFragment" />
</navigation>