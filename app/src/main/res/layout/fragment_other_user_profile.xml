<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="otherUserProfileVm"
            type="com.love.lovelive.ui.fragments.otherUser.OtherUserProfileVm" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.fragments.profile.ProfileFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:onClick="@{otherUserProfileVm::onClickBack}"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:src="@drawable/baseline_arrow_back_24"
                android:id="@+id/imgBack"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_toEndOf="@id/imgBack"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="@string/username"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgMenu"
                android:src="@drawable/baseline_more_vert_24"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="@dimen/_10sdp"/>


        </RelativeLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_scrollFlags="scroll|snap|exitUntilCollapsed">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_10sdp">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:id="@+id/profile_pic_layout"
                                android:layout_height="wrap_content">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="@dimen/_80sdp"
                                android:id="@+id/profileImage"
                                android:layout_below="@id/txtLive"
                                android:layout_marginTop="-15dp"
                                android:layout_height="@dimen/_80sdp"
                                android:src="@drawable/place_holder_1"
                                />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/live"
                                    android:background="@drawable/btn_bg"
                                    android:textColor="@color/white"
                                    android:id="@+id/txtLive"
                                    android:padding="@dimen/_5sdp"
                                    android:layout_centerHorizontal="true"
                                    android:textSize="@dimen/_7sdp"/>

                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/profile_pic_layout"
                                android:layout_centerVertical="true"
                                android:layout_marginHorizontal="@dimen/_15sdp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="MeEthi"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/_13sdp"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/india"
                                    android:textSize="@dimen/_11sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:textColor="@color/grey"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/dil_saaf_hoga_toh_har_gunah_maaf_hoga"
                                    android:textSize="@dimen/_11sdp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:textColor="@color/black"/>

                            </LinearLayout>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:orientation="horizontal"
                            >

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.25"
                                android:layout_margin="@dimen/_5sdp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/_15sdp"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Earned"
                                    android:textSize="@dimen/_11sdp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:textColor="@color/grey"/>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.25"
                                android:gravity="center"
                                android:layout_margin="@dimen/_5sdp"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/_15sdp"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Likes"
                                    android:textSize="@dimen/_11sdp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:textColor="@color/grey"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.25"
                                android:gravity="center"
                                android:layout_margin="@dimen/_5sdp"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/_15sdp"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Followers"
                                    android:textSize="@dimen/_11sdp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:textColor="@color/grey"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.25"
                                android:gravity="center"
                                android:layout_margin="@dimen/_5sdp"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/_15sdp"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Following"
                                    android:textSize="@dimen/_11sdp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:textColor="@color/grey"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:background="@drawable/btn_round_bg"
                            android:layout_marginVertical="@dimen/_10sdp"
                            android:layout_gravity="center"
                            android:layout_weight="0.6"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/baseline_add_24"
                                    app:tint="@color/white" />
                                <TextView
                                    android:id="@+id/txtAddPost"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_8sdp"
                                    android:text="@string/follow"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold" />

                            </LinearLayout>



                        </RelativeLayout>

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:background="@drawable/white_round_bg"
                                android:layout_weight="0.2"
                                android:padding="@dimen/_7sdp"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:elevation="@dimen/_5sdp"
                                android:src="@drawable/ic_comment"/>

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/_35sdp"
                                    android:layout_weight="0.2"
                                    android:background="@drawable/white_round_bg"
                                    android:elevation="@dimen/_5sdp"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:layout_gravity="center"
                                    android:padding="@dimen/_7sdp"
                                    android:src="@drawable/ic_gift"/>
                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.appbar.CollapsingToolbarLayout>
            </com.google.android.material.appbar.AppBarLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    setRecyclerviewAdapter="@{otherUserProfileVm.otherUserCategories}"
                    itemList="@{otherUserProfileVm.categoriesList}"
                    tools:listitem="@layout/profile_categories_item"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    setRecyclerviewAdapter="@{otherUserProfileVm.otherUserPostsAdapter}"
                    itemList="@{otherUserProfileVm.list}"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="3"
                    tools:listitem="@layout/posts_item"/>

                <!--                <RelativeLayout-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="match_parent"-->
                <!--                    >-->

                <!--                    <TextView-->
                <!--                        android:layout_width="wrap_content"-->
                <!--                        android:layout_height="wrap_content"-->
                <!--                        android:text="@string/no_post"-->
                <!--                        android:textColor="@color/grey"-->
                <!--                        android:textSize="@dimen/_15sdp"-->
                <!--                        android:layout_centerInParent="true"/>-->

                <!--                </RelativeLayout>-->

            </LinearLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>



    </LinearLayout>
</layout>